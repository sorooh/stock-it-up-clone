# Stock It Up Clone Environment Variables
# نسخة مطابقة 100% من منصة Stock It Up الأصلية

# Django Settings
SECRET_KEY=django-insecure-stock-it-up-clone-development-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=django.db.backends.sqlite3
# For PostgreSQL, use:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=stock_it_up_clone
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration (for cache and WebSocket)
REDIS_URL=redis://127.0.0.1:6379/1

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password
# DEFAULT_FROM_EMAIL=Stock It Up Clone <noreply@stockitup.clone>

# Security Settings (Production)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Marketplace API Keys
# Bol.com Integration
BOL_COM_CLIENT_ID=your_bol_client_id
BOL_COM_CLIENT_SECRET=your_bol_client_secret

# Amazon EU Integration
AMAZON_EU_CLIENT_ID=your_amazon_client_id
AMAZON_EU_CLIENT_SECRET=your_amazon_client_secret

# eBay Integration
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_url